<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- ================= Карточка информации об устройстве ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Заголовок с кнопкой Refresh -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/deviceHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Информация об устройстве"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/refreshButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_refresh"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="@color/icon_tint_selector"
                        android:padding="8dp"/>
                </LinearLayout>

                <!-- Контейнер данных + троббер -->
                <FrameLayout
                    android:id="@+id/deviceInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Поля с информацией -->
                    <LinearLayout
                        android:id="@+id/deviceInfoContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Device name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/device_name_label"
                                app:fontFamily="@font/montserrat_medium"/>

                            <TextView
                                android:id="@+id/deviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                app:fontFamily="@font/montserrat_semibold"/>
                        </LinearLayout>

                        <!-- Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/device_status_label"
                                app:fontFamily="@font/montserrat_medium"/>

                            <TextView
                                android:id="@+id/deviceStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                app:fontFamily="@font/montserrat_semibold"/>
                        </LinearLayout>

                        <!-- Uptime -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/device_uptime_label"
                                app:fontFamily="@font/montserrat_medium"/>

                            <TextView
                                android:id="@+id/deviceUptime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                app:fontFamily="@font/montserrat_semibold"/>
                        </LinearLayout>

                        <!-- Measurement frequency -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/device_frequency_label"
                                app:fontFamily="@font/montserrat_medium"/>

                            <TextView
                                android:id="@+id/deviceFrequency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                app:fontFamily="@font/montserrat_semibold"/>
                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/deviceInfoProgress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

                <!-- Кнопки управления устройством -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/rebootButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Перезагрузить устройство"
                        app:fontFamily="@font/montserrat_semibold"/>

                    <Button
                        android:id="@+id/disableSensorButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Выключить сенсор"
                        android:layout_marginStart="8dp"
                        app:fontFamily="@font/montserrat_semibold"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================= Карточка Настройка приложения ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Настройка приложения"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Период автообновления -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Период автообновления:"
                        app:fontFamily="@font/montserrat_medium"/>

                    <Spinner
                        android:id="@+id/autoUpdateSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        app:tint="@color/white"/>
                </LinearLayout>

                <!-- IP сервера -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP сервера:"
                        app:fontFamily="@font/montserrat_medium"/>

                    <EditText
                        android:id="@+id/serverIpEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:inputType="text"/>
                </LinearLayout>

                <!-- Кнопки сохранить/отмена -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/discardButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Отмена"
                        app:fontFamily="@font/montserrat_semibold"/>

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Сохранить"
                        android:layout_marginStart="8dp"
                        app:fontFamily="@font/montserrat_semibold"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
