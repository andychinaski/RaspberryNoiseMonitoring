<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/filterLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Только критичные события"
            android:textSize="18sp"
            app:fontFamily="@font/montserrat_semibold"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/filterSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector"
            />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/icon_tint_selector"
            android:padding="8dp"
            android:contentDescription="Обновить"/>
    </LinearLayout>

    <!-- RecyclerView в CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/measurementsRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="4dp"/>

    </androidx.cardview.widget.CardView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonToday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_label_today"
            android:layout_marginEnd="4dp"
            android:minHeight="50dp"
            app:fontFamily="@font/montserrat_semibold"/>

        <Button
            android:id="@+id/buttonYesterday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_label_yesterday"
            android:layout_marginHorizontal="4dp"
            android:minHeight="50dp"
            app:fontFamily="@font/montserrat_semibold"/>

        <Button
            android:id="@+id/buttonPickDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/button_label_pick_date"
            android:layout_marginStart="4dp"
            android:minHeight="50dp"
            app:fontFamily="@font/montserrat_semibold"/>
    </LinearLayout>
</LinearLayout>