<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.NoiseMonitor" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:includeFontPadding">true</item>

        <!-- Цвета -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorControlNormal">@color/divider</item>

        <!-- Глобальный шрифт -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textViewStyle">@style/Widget.NoiseMonitor.TextView</item>

    </style>

    <!-- Объявляем стили -->
    <style name="Widget.NoiseMonitor.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.NoiseMonitor.BottomNav" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- Стиль для заголовка Toolbar -->
    <style name="TextAppearance.NoiseMonitor.ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Стиль кнопки DatePicker -->
    <style name="Widget.NoiseMonitor.DatePicker.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Стиль для DatePicker -->
    <style name="ThemeOverlay.NoiseMonitor.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Цвет текста (чисел и т.д.) -->
        <item name="colorOnSurface">@color/surface</item>
        <!-- Основной цвет (заголовок, выбранная дата) -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Цвет текста на выбранной дате -->
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Стили кнопок -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.NoiseMonitor.DatePicker.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.NoiseMonitor.DatePicker.Button</item>
    </style>

    <!-- Стиль для AlertDialog -->
    <style name="NoiseMonitor.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/surface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.NoiseMonitor.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.NoiseMonitor.Body.Text</item>
    </style>
    
    <style name="MaterialAlertDialog.NoiseMonitor.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="MaterialAlertDialog.NoiseMonitor.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.NoiseMonitor.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.NoiseMonitor.BottomNav</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.NoiseMonitor.BottomNav</item>
    </style>

    <style name="Base.Theme.NoiseMonitor.Fixed" parent="Base.Theme.NoiseMonitor">
        <item name="bottomNavigationStyle">@style/Widget.NoiseMonitor.BottomNavigationView</item>
    </style>

    <!-- Основная тема -->
    <style name="Theme.NoiseMonitor" parent="Base.Theme.NoiseMonitor.Fixed" />

</resources>