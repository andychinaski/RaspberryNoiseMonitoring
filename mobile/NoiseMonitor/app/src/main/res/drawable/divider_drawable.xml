<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Отступы: вертикальные (чтобы линия была посередине пространства 17dp) и горизонтальные (чтобы не от края до края) -->
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="16dp"
        android:right="16dp">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="@color/divider" />
        </shape>
    </item>
</layer-list>