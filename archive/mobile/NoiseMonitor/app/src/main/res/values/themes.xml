<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.NoiseMonitor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Font Family -->
        <item name="android:fontFamily">@font/manrope</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_accent_card</item>
        <item name="colorPrimaryVariant">@color/light_accent_card</item>
        <item name="colorOnPrimary">@color/light_primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_accent_card</item>
        <item name="colorSecondaryVariant">@color/light_accent_card</item>
        <item name="colorOnSecondary">@color/light_primary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface1</item>
        <item name="colorError">@color/error</item>
    </style>

    <!-- Shape Appearance for Rounded Cards/Tables -->
    <style name="ShapeAppearance.NoiseMonitor.Card" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Shape Appearance for Rounded Buttons -->
    <style name="ShapeAppearance.NoiseMonitor.Button" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Theme.NoiseMonitor.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>